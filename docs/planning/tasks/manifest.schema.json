{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "manifest.schema.json",
  "title": "Task Manifest",
  "description": "Schema for Journey task manifest - validates task structure and values",
  "type": "object",
  "required": ["version", "tasks"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the manifest format"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last manifest update"
    },
    "tasks": {
      "type": "array",
      "description": "List of all tasks in the manifest",
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "statusValues": {
      "type": "array",
      "description": "Valid status values (documentation only)",
      "items": {
        "type": "string"
      }
    },
    "priorityOrder": {
      "type": "array",
      "description": "Priority values in order (documentation only)",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["id", "title", "file", "priority", "status"],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^G\\d+-[a-z0-9-]+$",
          "description": "Task ID in format G{number}-{slug}. Example: G17-health-sync"
        },
        "title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 150,
          "description": "Human-readable task title"
        },
        "file": {
          "type": "string",
          "pattern": "^G\\d+-[a-z0-9-]+\\.md$",
          "description": "Markdown file name. Must match ID with .md extension"
        },
        "priority": {
          "type": "string",
          "enum": ["P0", "P1", "P2", "P3"],
          "description": "Task priority. P0=critical, P1=high, P2=medium, P3=low"
        },
        "complexity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Estimated implementation complexity"
        },
        "estimatedFiles": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "description": "Estimated number of files to create/modify"
        },
        "status": {
          "type": "string",
          "enum": ["available", "claimed", "in_progress", "completed", "blocked", "abandoned"],
          "description": "Current task status"
        },
        "claimedBy": {
          "type": ["string", "null"],
          "description": "Agent or user who claimed the task"
        },
        "claimedAt": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when task was claimed"
        },
        "completedAt": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when task was completed"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^G\\d+-[a-z0-9-]+$"
          },
          "description": "Task IDs that must be completed before this task can start"
        },
        "blockedBy": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Task IDs or external factors blocking this task"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": "Categorization tags (e.g., frontend, backend, mobile)"
        },
        "source": {
          "type": "string",
          "description": "Where this task originated from (e.g., ideation-loop, manual)"
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp when task was created"
        }
      }
    }
  }
}
