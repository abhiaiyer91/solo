{
  "name": "solo-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --require dotenv/config src/index.ts",
    "build": "tsc",
    "start": "node --require dotenv/config dist/index.js",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push --force",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.15",
    "@hono/node-server": "^1.13.0",
    "@mastra/core": "^0.24.9",
    "@paralleldrive/cuid2": "^2.2.2",
    "better-auth": "^1.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "postgres": "^3.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.0",
    "vitest": "^4.0.17"
  }
}
